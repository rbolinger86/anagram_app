<h1 id="intro-start">Welcome To Our </h1><h1><span>Anagram Generator</span></h1>
<% if @error.present? %>
  <p class='error'><%= "#{@error}" %></p>
<% end %>
<div class="form">
  <form action="/" method="post" class="form">
    <label id="label" for="word">3 Letter Words ONLY Please!</label>
    <input id="word-input" type="text" name="word">
    <br>
    <input type="submit" value="Show Me My Anagrams!" class="btn">
  </form>
</div>
